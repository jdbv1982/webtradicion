letras = #9C9B87
menu-fondo = #DEDEDE
color-fondo = #F6F5E1
body
	color letras
	font-family Georgia, "Times New Roman", Times, serif
	font-size 90%
a
	text-decoration none
nav
	text-align left
	z-index 9999
	.menu
		padding 0
		overflow-x auto
		white-space nowrap
		margin 0 auto
		li
			display inline-block
			a
				color letras
				display block
				padding 0.2em 1em
				margin 0.5em 0.5em
				text-decoration none
.submenu
	border 1px solid letras
	width 230px
	position absolute
	z-index 10001
	left 55%
	background white
	display none

	ul
		margin 0
		padding 0 1em
		li
			list-style none
			margin 1em 0
			padding 0
			a
				color letras

.full-content
	position relative
	padding-bottom 1em
	min-height 25em
	width 90%
	left 5%
	z-index 1000

/*Header y footer*/

.Redes
	width 90%
	left 5%
	min-height 32px
	position relative
	text-align center
	.Redes-iconos
		.icono
			width 25px
			height 21px
			display inline-block
			padding 0 1em
	.Redes-idiomas
		.link-idioma
			display inline-block
			color letras
	&-facebook
		background url(../images/general/fb.png) center no-repeat
	&-twitter
		background url(../images/general/tw.png) center no-repeat
	&-linkedin
		background url(../images/general/linkedin_circle_black-48.png) center no-repeat
		background-size 23px 23px
	&-mail-suscripcion
		background url(../images/general/mail.png) center no-repeat
		background-size 23px 23px

.web-div-header
		width 100%
		height 35px
		background url(../images/smart/marcoup.png) center no-repeat
.footer
	width 100%
	height 35px
	position relative
	bottom 0
	.web-div-footer
		width 100%
	.copyrigtht
		text-align center
.div-imagen
	background url(../images/general/detallech.png) center no-repeat
	height 5em

/*css para edad*/
.div-mensaje
	top 5em
	position relative
	text-align center
	z-index 8889
	a
		text-decoration none
		color letras
		font-size 1.3em
	.div-pregunta
		font-size 1.2em
		background: bottom left repeat-x url(../images/general/borde.png)
		margin-bottom 0.5em
		padding 0 0 1em 0
		width 70%
		margin 0 15%
	.div-respuesta
		display inline-block
		padding 1.2em 1.2em
		font-size 1.5em
		margin-top .5em
	.borde-lateral-derecho
		border-right 3px solid letras
	.borde-lateral-izquierdo
		border-left 3px solid letras

/*pagina de inicio*/
.contenido
	padding 1em 0
	.generaciones
		.titulo
			font-size 1.5em
			text-align center
			font-weight bold
		.generacion
			text-align center
			.g-image
				width 100%
				height 10em
			.g1
				background url(../images/general/marco1ppal.jpg) center no-repeat
			.g2
				background url(../images/general/marco2ppal.jpg) center no-repeat
			.g3
				background url(../images/general/marco3ppal.jpg) center no-repeat
			.g4
				background url(../images/general/marco4ppal.jpg) center no-repeat
			.g5
				background url(../images/general/marco5ppal.jpg) center no-repeat
	.mezcal
		background url(../images/general/imagenppal.jpg) center no-repeat
		margin 0 auto
		height 30em
		width 100%
		background-size 100% 100%
	.inicio-subcontenido
		.inicio-desc
			.img-head
				min-height 3em
				background url(../images/general/ppaldetalleup.jpg) center no-repeat
				background-size 100% 100%
			.img-footer
				min-height 3em
				background url(../images/general/ppaldetalledown.jpg) center no-repeat
				background-size 100% 100%
		.promocion
			.promocion-img
				min-height 10em
				background url(../images/general/productos/mezcal-cuerudos-anejo.jpg) center no-repeat
				background-size 10% 100%
				margin 0 auto
				padding 1em
			.promocion-nombre
				text-align center
				font-size .8em
				font-weight bold
				padding 1em


/*css para la pagina de la tradicion o historia*/

.Historia
	width 100%
	position relative
	z-index 7777
	&-arbol
		background url(../images/general/arbolhis.jpg) center no-repeat
		min-height 45em
		display none
		.menu-arbol
			min-height 65px
			min-width 10px
			cursor pointer
			z-index 777
	&-texto
		background color-fondo
		width 100%
		padding 1em 0 4em 0
		.Historia-titulo
			text-align center
			font-size 2em
			font-weight bold
			padding-bottom 1em
			.loader
				background url(../images/general/loader.gif) center no-repeat
				height 32px
				width 32px
				float left
				display none

		.Historia-contenido
			border-top 1px solid letras
			border-bottom 1px solid letras
		.Historia-menu
			text-align center
			position absolute
			padding-bottom 1em
			li
				color white
				display inline-block
				background letras
				min-width 30px
				border-radius 10px
				padding 5px 5px
				cursor pointer

.content-slides
	position relative
	top 10px
	left 10%
	width 80%

/*pagina de contacto*/

legend
	width 100%
	font-size 2em
	padding-bottom 0.2em
	border-bottom 1px solid letras

.contenido
	.contacto
		&-img
			background url(../images/general/contacto.jpg) center no-repeat
			height 13em
			width 100%

	.contacto-map
		width 100%
		height 20em
		background url(../images/general/contacto2.jpg) center no-repeat
		background-size 100% 100%

	.menuproductos
		width 100%
		min-height 40px
		text-align center
		display none
		.menu
			cursor pointer
			line-height 40px
			color white
			width 180px
			font-size .8em
			height 40px
			display inline-block
			background url(../images/general/menuindividual.png) center no-repeat
			background-size 90% 100%

	.Producto
		.imagen-producto
			img
				width 10%
				left 45%
				position relative
				height 13em
				background-size 100% 100%

		.contenido-producto
		&-img-pie
			text-align center
			font-size .8em
			padding 1em 0.3em

		&-titulo
			text-align center
			font-size 1.3em
			padding 1em 0
			margin 1em 0
			border-bottom 1px solid letras
			border-top 1px solid letras

		&-descripcion
			text-align justify
			padding 1em 0
			margin  1em 0

		&-subtitulo
			text-align center
			font-size 1.3em
			padding 1em 0
			margin 1em 0

		&-subdescripcion
			margin 1em 0
			padding 1em 0
			p
				text-align justify
	.Acta
		color letras

/*css para proceso*/

.contenido
	.Proceso
		&-justify
			text-align justify
		&-menu
			text-align center
		&-contenido
		&-titulo
			text-align center
			font-size 1.3em
			border-top 1px solid letras
			border-bottom 1px solid letras
			padding 1em 0
		&-subtitulo
			text-align center
			font-size 1em
			padding 1em 0

		&-right
			border 1px solid letras

		&-item-menu
			cursor pointer
			padding 0 .1em
			line-height 4.3em
			color white
			font-size 1.3em
			font-weight bold
			display inline-block
			background url(../images/general/item-proceso.jpg) center no-repeat
			width 10%
			height 4em
			background-size 100% 100%

		&-img
			text-align center
			img
				width 15em
				background-size 100% 100%
		&-modal-contenido
			text-align center
		&-modal-titulo
			padding 1em 0
			font-size 1.5em
		&-modal-texto
			text-align justify

@import "componentes.styl"
@import "media.styl"
