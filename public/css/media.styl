/*tablets*/
@media screen and (min-width:769px)
	nav
		background none
		text-align center
		border-bottom 1px solid letras
		position relative
		width 100%
		.decoration-left
			border-left 2px solid letras
	.full-content
		width 60%
		left 20%
		min-height 45em
		padding-top 1em

	.Redes
		width 90%
		left 5%
		.Redes-iconos
			width 45%
			display inline-block
			text-align left
			.icono
				padding 0
		.Redes-idiomas
			width 45%
			display inline-block
			text-align right

	.web-div-header
		height 86px
		background url(../images/tablet/landscape/marcoup.png) center no-repeat
		background-size 81%
	.footer
		bottom 20em
		.web-div-footer
			width 100%
			margin 0 auto
			background url(../images/tablet/landscape/marco-down.png) center no-repeat
			background-size 81%
			min-height 22em
			display block
			padding-bottom 20px
	.div-mensaje
			top 15em
	.contenido
		padding-top 3em
		.generaciones
			text-align center
			.generacion
				width 30%
				display inline-block
		.contacto
			padding-bottom 0.3em
			border-bottom 1px solid letras
			&-img
				width 49%
				display inline-block
			&-datos
				width 49%
				display inline-block
		.contacto-map
			height 30em

		.Producto
			.imagen-producto
				width 49%
				display inline-block
				img
					padding-top 1em
					width 20%
					left 45%
					position relative
					height 27em
					background-size 100% 100%

			.contenido-producto
				width 49%
				display inline-block
			&-img-pie
				text-align center
				font-size .8em
				padding 1em 0.3em

			&-titulo
				text-align center
				font-size 1.3em
				padding 1em 0
				margin 1em 0
				border-bottom 1px solid letras
				border-top 1px solid letras

			&-descripcion
				text-align justify
				padding 1em 0
				margin  1em 0

			&-subtitulo
				text-align center
				font-size 1.3em
				padding 1em 0
				margin 1em 0

			&-subdescripcion
				margin 1em 0
				padding 1em 0
				p
					text-align justify
		.Acta
			&-left
				width 49%
				display inline-block
			&-right
				width 49%
				display inline-block

	.inicio-subcontenido
		.inicio-desc
			width 45%
			display inline-block
		.promocion
			width 45%
			display inline-block
	.Historia
		position relative
		&-arbol
			display inline-block
			position relative
			width 25%
		&-texto
			top 8%
			min-height 15em
			right 0
			position absolute
			width 52%
			box-shadow 10px 10px 5px #999
			padding 1em 2em 4em 2em
			.Historia-menu
				display none

	.contenido
		.Proceso
			&-modal
				padding-bottom 1em
				border-bottom 1px solid letras
			&-img
				display inline-block
				padding-right 1em
			&-modal-contenido
				width 70%
				font-size 1em
				display inline-block
			&-contenido
				font-size 1em
				position relative
				display inline-flex
				text-align center
			&-left
				width 45%
				margin 0 1em
			&-right
				width 45%
				padding 0 1em






/*desktop*/
@media screen and (min-width: 1280px)
	nav
		width 80%
		left 10%
	.web-div-header
		background url(../images/desktop/marcoup.png) center no-repeat
		background-size 81%
	.footer
		bottom 31em
		.web-div-footer
			width 100%
			margin 0 auto
			background url(../images/desktop/marco-down.png) center no-repeat
			background-size 81%
			min-height 33em
			display block
			padding-bottom 20px
	.contenido
		position relative
		.generaciones
			width 50%
		.mezcal
			position absolute
			top 7%
			right 0
			width 50%
			vertical-aling center
