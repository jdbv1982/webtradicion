@media screen and (min-width:768px)
	nav
		background none
		text-align center
		border-bottom 1px solid letras
		position relative
		width 60%
		left 20%

		.decoration-left
			border-left 2px solid letras

	.div-mensaje
		top: 50px;

	.web-div-header
		background url(../images/tablet/landscape/marcoup.png) center no-repeat
	.footer
		.web-div-footer
			background url(../images/tablet/landscape/marco-down.png) center no-repeat
			height 25em

	.contenido
		.generaciones
			.generacion
				height 14em
				width 30%
				display inline-block

		.mezcal
			border-bottom 1px solid letras
			border-top 1px solid letras

		.inicio-subcontenido
			.inicio-desc
				.img-head
					background url(../images/general/ppaldetalleup.png) center no-repeat
					height 3em

				.descripcion
					width 80%
					left 10%
					position absolute
					display block

				.img-footer
					background url(../images/general/ppaldetalledown.png) center no-repeat
					height 3em
					position relative
					top 9em

